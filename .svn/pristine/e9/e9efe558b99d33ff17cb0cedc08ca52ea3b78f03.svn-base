			"11":"讯息",
			"12":"EAS"
		}
	}
	function showGroup() {
		$("#group .content").html("");
		var search=$("#group [name='group']").val();
		for(var x in group){
			if(search.length>0){
				var shortStr=group[x].name.substr(0,search.length);
				if(shortStr!=search) continue;
			}
			$("#group .content").append("<div class='pull-left'><input id='"+x+"' type='checkbox' id='group-check-"+x+"' />"+group[x].name+"</label></div>");
			$("#group .content [id='"+x+"']").attr("checked",group[x].state);
		}
		$("#group .content [type='checkbox']").on("change",function () {
			console.log($(this).attr("checked"));
			group[$(this).attr("id")].state=$(this).attr("checked");

		})
	}
	function userShow () {
	}
	$(function () {
		showGroup();
	})
</script>
