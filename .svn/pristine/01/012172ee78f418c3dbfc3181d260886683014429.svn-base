<script>
get_url = url2get();
$(function() {
    if (get_url.id) {
        get_guest = ajax_send({}, "/guest/" + get_url.id + "/pic", "GET");
        if (get_guest.result) {
            $(".picShow img").attr("src", get_guest.result.url);
        } else { //
            alert("请先添加往来图片");
            location.href = index_url + "/user/edit-4.html?id=" + get_url.id;
        }
        $(".edit_it").attr("href", $(".edit_it").attr("href") + "?id=" + get_url.id);
        $.each($(".edit_step a"), function(i, link) {
            if (!link.href) return;
            link.href = link.href + "?id=" + get_url.id;
        })
    } else {
        location.href = index_url + "/user/index.html"
    }
})
</script>
