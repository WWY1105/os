<form class="row"  ng-submit="postSend()" name="add_form">
    <div class="col-md-12">
        <div class="col-sm-10 form-horizontal">
            <div class="form-group">
                <div class="col-sm-6 text-red col-sm-offset-2 ">*为必填项</div>
            </div>

            <div class="form-group">
                <label for="platform" class="col-sm-2 control-label text-right">
                    <span class="text-red">*</span>
                    标题
                </label>
                <div class="col-sm-6" id="code">
                  <input type="text" class="form-control" ng-model="posts.title">
                </div>
            </div>

            <div class="form-group">
                <label for="platform" class="col-sm-2 control-label text-right">
                    <span class="text-red">*</span>
                    内容
                </label>
                <div class="col-sm-9" id="content">
                  <textarea name="content" rows="8" cols="80" class="form-control" ng-model="posts.content"></textarea>
                </div>
            </div>

            <div class="col-sm-10 col-sm-offset-2">
                <div class="row">
                    <div class="col-sm-3">
                        <a class="btn btn-default btn-block" back-button>返回</a>
                    </div>
                    <div class="col-sm-3 col-sm-offset-1">
                        <button class="btn btn-danger btn-block" ng-disabled="!add_form.$valid">确定</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
