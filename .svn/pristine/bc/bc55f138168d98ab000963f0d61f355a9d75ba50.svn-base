<form class="row"  ng-submit="postSend()" name="add_form">
    <div class="col-md-12">
        <div class="col-sm-10 form-horizontal">
            <div class="form-group">
                <div class="col-sm-6 text-red col-sm-offset-2 ">*为必填项</div>
            </div>
            <div class="form-group">
                <label for="product" class="col-sm-2 control-label text-right">
                    <span class="text-red">*</span>平台
                </label>
                <div class="col-sm-3" id="product">
                    <select class="form-control" ng-model="posts.type" required>
                        <option value="A02" ng-model="posts.type" >捷账宝</option>
                        <option value="W01" ng-model="posts.type" >后台管理系统</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="platform" class="col-sm-2 control-label text-right">
                    <span class="text-red">*</span>
                    标题
                </label>
                <div class="col-sm-6" id="code">
                  <input type="text" class="form-control" ng-model="posts.title" ng-minlength='5' ng-maxlength='30' required>
                  <span class="help-block"  ng-messages="add_form.$error">
                    <div  ng-message="required">5-30个字符</div>
                    <div class="text-red" ng-message="minlength">需大于5个字符</div>
                    <div class="text-red" ng-message="maxlength">需小于30字符</div>
                 </span>
                </div>
            </div>

            <div class="form-group">
                <label for="platform" class="col-sm-2 control-label text-right">
                    <span class="text-red">*</span>
                    内容
                </label>
                <div class="col-sm-9" id="content">
                  <textarea name="content" rows="8" cols="80" class="form-control" ng-model="posts.content" placeholder="内容长度应为10-500个字符" ></textarea>
                </div>
            </div>

            <div class="col-sm-10 col-sm-offset-2">
                <div class="row">
                    <div class="col-sm-3">
                        <a class="btn btn-default btn-block" back-button>返回</a>
                    </div>
                    <div class="col-sm-3 col-sm-offset-1">
                        <button class="btn btn-danger btn-block" ng-disabled="!add_form.$valid">确定</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
