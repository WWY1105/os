<div class="contents bgw">
	<table class="table table-bordered table-striped text-center" ng-if="view.messages.items">
		<thead>
			<tr class="info">
				<th>序号</th>
				<th>标题</th>
				<th>内容</th>
				<th>创建时间</th>
				<th>操作</th>
			</tr>
		</thead>
		<tbody>
			<tr ng-repeat="message in view.messages.items">
				<td ng-bind="((view.messages.page-1)*view.messages.count)+$index+1"></td>
				<td width="20%" ng-bind="message.title"></td>
				<td align="left" width="55%" style="word-break:break-all;" ng-bind="message.content"></td>
				<td ng-bind="message.createTime|date:'yyyy-MM-dd HH:mm:ss'"></td>
				<td> <button ng-click="delete(message.id)">删除</button> </td>
			</tr>
		</tbody>
	</table>
	<div class="col-sm-8 " ng-if="view.messages.items">
            <pagination items-per-page="view.messages.count" boundary-links="true" total-items="view.messages.total" ng-model="view.messages.page" class="pagination-sm" previous-text="&lsaquo;" ng-change="pageChange()" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;">
            </pagination>

    </div>

    <div class="col-sm-3">
		<button class="btn btn-primary" ng-click="create()">新增消息</button>
	</div>
</div>
